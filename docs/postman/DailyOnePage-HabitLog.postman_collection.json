{
  "info": {
    "name": "DailyOnePage API - HabitLog",
    "_postman_id": "daily-onepage-habit-log-api",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "accessToken",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "HabitLog",
