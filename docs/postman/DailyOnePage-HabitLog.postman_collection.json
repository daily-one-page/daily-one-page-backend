              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userHabitId\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/habit-logs",
              "host": ["{{baseUrl}}"],
              "path": ["api", "habit-logs"]
            }
          }
        },
        {
          "name": "습관 체크 (특정 날짜)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userHabitId\": 1,\n  \"date\": \"2025-01-28\",\n  \"checked\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/habit-logs",
              "host": ["{{baseUrl}}"],
              "path": ["api", "habit-logs"]
            }
          }
        },
        {
          "name": "오늘 습관 기록 조회",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/habit-logs",
              "host": ["{{baseUrl}}"],
              "path": ["api", "habit-logs"]
            }
          }
        },
        {
          "name": "특정 날짜 습관 기록 조회",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/habit-logs?date=2025-01-29",
              "host": ["{{baseUrl}}"],
              "path": ["api", "habit-logs"],
              "query": [
                {
                  "key": "date",
                  "value": "2025-01-29"
                }
              ]
            }
          }
        },
        {
          "name": "습관 체크 취소",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/habit-logs/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "habit-logs", "1"]
            }
          }
        }
      ]
    }
  ]
}
