{
  "info": {
    "name": "DailyOnePage API - Habit",
    "_postman_id": "daily-onepage-habit-api",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "accessToken",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Habit",
      "item": [
        {
          "name": "시스템 습관 목록 조회",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/habits?type=system",
              "host": ["{{baseUrl}}"],
              "path": ["api", "habits"],
              "query": [
                {
                  "key": "type",
                  "value": "system"
                }
              ]
            }
          }
        },
        {
          "name": "커스텀 습관 생성",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"명상하기\",\n  \"type\": \"PRACTICE\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/habits",
              "host": ["{{baseUrl}}"],
              "path": ["api", "habits"]
            }
          }
        },
        {
          "name": "커스텀 습관 수정",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"아침 명상\",\n  \"type\": \"PRACTICE\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/habits/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "habits", "1"]
            }
          }
        },
        {
          "name": "커스텀 습관 삭제",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/habits/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "habits", "1"]
            }
          }
        }
      ]
    }
  ]
}
