{
  "info": {
    "name": "DailyOnePage API - UserHabit",
    "_postman_id": "daily-onepage-user-habit-api",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "accessToken",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "UserHabit",
      "item": [
        {
          "name": "내 습관 목록 조회",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/user-habits",
              "host": ["{{baseUrl}}"],
              "path": ["api", "user-habits"]
            }
          }
        },
        {
          "name": "습관 등록",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"habitId\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/user-habits",
              "host": ["{{baseUrl}}"],
              "path": ["api", "user-habits"]
            }
          }
        },
        {
          "name": "습관 해제",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/user-habits/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "user-habits", "1"]
            }
          }
        }
      ]
    }
  ]
}
